" vim: filetype=vim

sanitize tridactyllocal tridactylsync

" will yank to clipboard command to download github repo in ~/github folder
" for further code inspection in vim
bind ygc composite js document.location.href.replace("https://github.com/", "gc ").replace("/", " ") | clipboard yank

" Ctrl-F should use the browser's native 'find' functionality.
unbind <C-f>

" But also support Tridactyl search too.
bind / fillcmdline find
bind ? fillcmdline find -?
bind n findnext 1
bind N findnext -1
bind B fillcmdline bmarks

set editorcmd /usr/local/bin/vimr --wait --nvim +only

" Remove search highlighting.
bind ,<Space> nohlsearch
" Use sensitive case. Smart case would be nice here, but it doesn't work.
set findcase sensitive

" Search ulrs
set searchurls.pydoc https://docs.python.org/3/search.html?q=%s
set searchurls.y https://www.youtube.com/results?search_query=%s
set searchurls.gh https://github.com/search?utf8=%E2%9C%93&q=%s&ref=simplesearch

set tabopenpos last
set smoothscroll false
set scrollduration 100
set allowautofocus false
set historyresults 30

unbind --mode=normal v
unbind --mode=normal o
unbind --mode=normal p

bind --mode=normal h tabprev
bind --mode=normal l tabnext

unbind --mode=ex <C-f>
unbind --mode=ex <Space>
bind   --mode=ex <C-w>     text.backward_kill_word
bind   --mode=ex <C-p>     ex.prev_completion
bind   --mode=ex <C-n>     ex.next_completion
bind   --mode=ex <C-Space> ex.insert_space_or_completion

keymap a <Nop>
keymap A <Nop>
keymap p <Nop>
keymap P <Nop>

" Cyrillic keymap support
keymap , ?
keymap . /
keymap / |
keymap а f
keymap А F
keymap б ,
keymap Б <
keymap в d
keymap В D
keymap г u
keymap Г U
keymap д l
keymap Д L
keymap е t
keymap Е T
keymap є '
keymap Є “
keymap ж ;
keymap Ж :
keymap з p
keymap З P
keymap и b
keymap И B
keymap і s
keymap І S
keymap ї ]
keymap Ї }
keymap й q
keymap Й Q
keymap к r
keymap К R
keymap л k
keymap Л K
keymap м v
keymap М V
keymap н y
keymap Н Y
keymap о j
keymap О J
keymap п g
keymap П G
keymap р h
keymap Р H
keymap с c
keymap С C
keymap т n
keymap Т N
keymap у e
keymap У E
keymap ф a
keymap Ф A
keymap х [
keymap Х {
keymap ц w
keymap Ц W
keymap ч x
keymap Ч X
keymap ш i
keymap Ш I
keymap щ o
keymap Щ O
keymap ъ ]
keymap Ъ }
keymap ы s
keymap Ы S
keymap ь m
keymap Ь M
keymap э '
keymap Э “
keymap ю .
keymap Ю >
keymap я z
keymap Я Z
